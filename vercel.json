{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "buildCommand": "cd frontend && npm install && CI=false npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/auth-google", "dest": "/api/auth-google.js" },
    { "src": "/api/auth-google-callback", "dest": "/api/auth-google-callback.js" },
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/api/user", "dest": "/api/user.js" },
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/static/(.*)", "dest": "/frontend/build/static/$1" },
    { "src": "/favicon.ico", "dest": "/frontend/build/favicon.ico" },
    { "src": "/manifest.json", "dest": "/frontend/build/manifest.json" },
    { "src": "/(.*).png", "dest": "/frontend/build/$1.png" },
    { "src": "/(.*).js", "dest": "/frontend/build/$1.js" },
    { "src": "/(.*).css", "dest": "/frontend/build/$1.css" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
}
